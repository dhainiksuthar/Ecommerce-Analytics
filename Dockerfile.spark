FROM apache/spark:3.5.0

USER root

# Install Python dependencies
RUN pip install --no-cache-dir delta-spark==3.0.0

# Pre-download Maven/Ivy packages (so spark-submit doesn't download at runtime)
RUN /opt/spark/bin/spark-shell --packages \
    org.apache.spark:spark-sql-kafka-0-10_2.12:3.5.0,\
    io.delta:delta-spark_2.12:3.0.0,\
    io.delta:delta-storage:3.0.0 \
    -e "println(\"Packages downloaded successfully\")" && \
    rm -rf /tmp/spark-*

WORKDIR /opt/spark/work-dir

USER spark
